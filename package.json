    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/application/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/application/__mocks__/styleMock.js",
      "@wg/functional": "<rootDir>/application/packages/utils/functional",
      "@wg/immutable": "<rootDir>/application/packages/utils/immutable",
      "@wg/(.*)": "<rootDir>/application/packages/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [ "ts", "tsx", "js", "jsx", "json", "node" ]
  }
